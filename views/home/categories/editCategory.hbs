<h1>Categories</h1>

<form class="user" action="/category/{{category.id}}?_method=PUT" method="POST">
    <div class="card mb-4 text-white bg-danger">
        <div class="card-body">
            Errors or Validation
        </div>
    </div>

    <div class="form-group">
        <input type="text" name="title" class="form-control form-control-user" id="exampleInputTitle"
            aria-describedby="titleHelp" value={{category.category_name}}>
    </div>

    <input type="submit" value="Submit" class="btn btn-primary btn-user btn-block">
</form>