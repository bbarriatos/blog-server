{{> form-messages}}

<div class="card shadow mb-12">
    <div class="card-body">

        <div class="col-sm-12 col-md-6">
            <div id="dataTable_filter" class="dataTables_filter">
                <label><span>Search:</span> <input type="search" class="form-control form-control-sm" placeholder=""
                        aria-controls="dataTable"> <a href="#" class="btn btn-primary btn-icon-split btn-sm">
                        <span class="text">Search</span>
                    </a></label>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr class="bg-primary text-white">
                        <th width="100">#</th>
                        <th>Title</th>
                        <th>Due Date</th>
                        <th>Status</th>
                        <th>User</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each task_list}}
                    <tr>
                        <td>{{_id}}</td>
                        <td>{{task_title}}</td>
                        <td>{{task_due}}</td>
                        <td>{{status.status_name}}</td>
                        <td>{{user.user_username}}</td>
                        <td>
                            <a href="/tasks/{{_id}}" class="btn btn-success btn-circle btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>

                            <form action="/tasks/{{_id}}?_method=DELETE" method="post">
                                <button class="btn btn-danger btn-circle btn-sm" type="submit"><i
                                        class="fas fa-trash"></i></button>
                            </form>
                        </td>
                        {{else}}
                        <td class="text-danger text-center" colspan="6"><strong>No content</strong></td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="bg-primary text-white">
                        <th>#</th>
                        <th>Title</th>
                        <th>Due Date</th>
                        <th>Status</th>
                        <th>User</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
            </table>

            <div class="dataTables_info" id="dataTable_info" role="status" aria-live="polite">Showing 1 to 1 of
                {{number_of_post}} entries</div>
        </div>
    </div>
</div>