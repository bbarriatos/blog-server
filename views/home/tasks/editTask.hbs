<form action="/tasks/{{task.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
    {{> form-messages}}
    <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Update Task</h6>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <input type="text" name="title" class="form-control form-control-user" id="exampleInputTitle"
                            aria-describedby="titleHelp" value="{{task.task_title}}" required>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control form-control-user" name="content" cols="30" rows="10"
                            required>{{task.task_content}}</textarea>
                    </div>
                    <input type="submit" value="Submit" class="btn btn-primary btn-user btn-block">
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-12">

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Status</h6>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <select name="status" id="" class="form-control">
                            {{#each status}}
                            <option value="{{_id}}"> {{status_name}} </option>
                            {{/each}}
                        </select>
                    </div>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Due Date</h6>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <input type="text" name="daterange" value="{{task.task_due}}" id="addPicker"
                            class="mb-3 form-control form-control-user" required>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>