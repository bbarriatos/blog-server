<form class="user" action="/users/{{user.id}}?_method=PUT" method="POST">
    {{> form-messages}}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Update User</h6>
        </div>

        <div class="card-body">
            <div class="form-group">
                <input type="username" name="username" class="form-control form-control-user"
                    value="{{user.user_username}}" required>
            </div>

            <div class="form-group">
                <input type="email" name="email" class="form-control form-control-user" value="{{user.user_email}}"
                    required>
            </div>

            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <input type="password" name="password" class="form-control form-control-user"
                        placeholder="New Password" required>
                </div>
                <div class="col-sm-6">
                    <input type="password" name="confirmPassword" class="form-control form-control-user"
                        placeholder="Repeat Password" required>
                </div>
            </div>

            <input type="submit" value="Update User" class="btn btn-primary btn-user btn-block">
        </div>
    </div>

</form>