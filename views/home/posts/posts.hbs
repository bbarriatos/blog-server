{{> form-messages}}

<div class="card shadow mb-12">
    <div class="card-body">

        <div class="col-sm-12 col-md-6">
            <div id="dataTable_filter" class="dataTables_filter">
                <label><span>Search:</span> <input type="search" class="form-control form-control-sm" placeholder=""
                        aria-controls="dataTable"> <a href="#" class="btn btn-primary btn-icon-split btn-sm">
                        <span class="text">Search</span>
                    </a></label>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr class="bg-primary text-white">
                        <th width="100">#</th>
                        <th width="180">Date</th>
                        <th width="100">Image</th>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Allow Comments</th>
                        <th>Status</th>
                        <th>User</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each post_list}}
                    <tr>
                        <td>{{_id}}</td>
                        <td>{{post_date}}</td>
                        <td>
                            {{#if file}}
                            <img src="/uploads/{{file}}" alt="{{post_title}}" class="w-100">
                            {{else}}
                            <img src="https://dummyimage.com/600x400/000/fff.jpg&text=No+Uploaded"
                                alt="No Image Uploaded" class="w-100">

                            {{/if}}
                        </td>
                        <td>{{post_title}}</td>
                        <td>{{category.category_name}}</td>
                        <td>{{#if allow_comments}}
                            <input type="checkbox" id="customCheck" disabled="true" checked>
                            {{else}}
                            <input type="checkbox" id="customCheck" disabled="true">
                            {{/if}}
                        </td>
                        <td>{{status.status_name}}</td>
                        <td>{{user.user_username}}</td>
                        <td>
                            <a href="/posts/{{_id}}" class="btn btn-success btn-circle btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>

                            <form action="/posts/{{_id}}?_method=DELETE" method="post">
                                <button class="btn btn-danger btn-circle btn-sm" type="submit"><i
                                        class="fas fa-trash"></i></button>
                            </form>
                        </td>
                        {{else}}
                        <td class="text-danger text-center" colspan="8"><strong>No content</strong></td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="bg-primary text-white">
                        <th>#</th>
                        <th>Date</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Comments</th>
                        <th>Status</th>
                        <th>User</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
            </table>

            <div class="dataTables_info" id="dataTable_info" role="status" aria-live="polite">Showing 1 to 1 of
                {{number_of_post}} entries</div>
        </div>
    </div>
</div>